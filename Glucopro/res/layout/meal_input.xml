<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#faebd7"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <TextView
        android:id="@+id/find_rest_manual"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/find_rest_wgps"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="60dp"
        android:gravity="center_horizontal"
        android:text="@string/meal_resturant_input"
        android:textSize="11pt" />

    <ImageView
        android:id="@+id/rest_wgps"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignLeft="@+id/rest_manual"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dp"
        android:onClick="barcode_click"
        android:src="@drawable/barcode_input" />

    <ImageView
        android:id="@+id/rest_manual"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_above="@+id/find_rest_manual"
        android:layout_centerHorizontal="true"
        android:onClick="rest_click"
        android:src="@drawable/meal_input" />

    <TextView
        android:id="@+id/find_rest_wgps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rest_wgps"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:text="@string/meal_input_question"
        android:textSize="11pt" />

</RelativeLayout>