<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/test_wallpaper"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Main" >

    <TextView
        android:id="@+id/testTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:text="@string/test_title"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/testManualInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/glucoHealthLoad"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="82dp"
        android:ems="10"
        android:gravity="center"
        android:hint="@string/test_manual_glucose_level_hint"
        android:inputType="number"
        android:textSize="10pt" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/manualTestSubmit"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_below="@+id/testManualInput"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:text="@string/test_manual_submit"
        android:textSize="10pt" />

    <Button
        android:id="@+id/glucoHealthLoad"
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/testTitle"
        android:layout_marginTop="55dp"
        android:background="@drawable/light_gray_gradient"
        android:text="@string/test_read_from_meter" 
        android:onClick="launchGlucoBridge"/>

</RelativeLayout>